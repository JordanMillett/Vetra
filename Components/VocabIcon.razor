@if (Name != "")
{
    <div class="row">
        <div class="col-6"></div>
        <div class="oma-full oma-@Name"></div>
    </div><br>
}    

@code
{
    [Parameter]
    public string Name { get; set; } = "";

    protected override void OnInitialized()
    {
        if (Name != "")
            Name = Name.ToLower().Replace(" ", "-");
        else
            Name = "white-question-mark";
    }
}